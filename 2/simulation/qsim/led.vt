wire c;
wire d;
wire e;
wire f;
wire g;
wire sel;

wire sampler;                             

// assign statements (if any)                          
led i1 (
// port map - connection between master ports and signals/registers   
	.a(a),
	.b(b),
	.c(c),
	.d(d),
	.data(data),
	.e(e),
	.f(f),
	.g(g),
	.sel(sel)
);
